# Unified Gateway Environment Configuration
# Copy this file to .env and adjust values as needed

# Gateway Configuration
# Port for gateway to listen on
GATEWAY_PORT=8080

# Authentication Configuration
# API key for bearer token authentication
API_KEY=changeme

# Backend Service Configuration
# URL to LM Studio Bridge service
BRIDGE_URL=http://lm-studio-bridge:3000

# Rate Limiting Configuration
# Maximum requests per minute per API key
RATE_LIMIT_PER_MINUTE=60

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Service Configuration
# Service name for logging and discovery
SERVICE_NAME=unified-gateway

# Authentication Toggle
# Enable/disable authentication
AUTH_ENABLED=true

# Health Check Configuration
# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=10

# Discovery Configuration
# Interval in seconds for service discovery polling
DISCOVERY_INTERVAL=30
