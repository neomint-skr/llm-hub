# LM Studio Bridge Environment Configuration
# Copy this file to .env and adjust values as needed

# LM Studio Connection
# URL to LM Studio API endpoint
# Use host.docker.internal for Docker Desktop on Windows/Mac
LM_STUDIO_URL=http://host.docker.internal:1234

# MCP Service Configuration
# Port for MCP service to listen on
MCP_PORT=3000

# Discovery and Polling
# Interval in seconds for model discovery polling
POLL_INTERVAL=30

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Service Configuration
# Service name for logging and discovery
SERVICE_NAME=lm-studio-bridge

# Health Check Configuration
# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=10

# Resource Management Configuration
# Enable intelligent resource management (true/false)
ENABLE_RESOURCE_MANAGEMENT=true

# Maximum CPU usage percentage (50% rule)
MAX_CPU_PERCENT=50.0

# Maximum memory usage percentage (50% rule)
MAX_MEMORY_PERCENT=50.0

# Resource monitoring interval in seconds
RESOURCE_MONITORING_INTERVAL=10

# Request Configuration
# Timeout for LM Studio API requests in seconds
REQUEST_TIMEOUT=30

# Maximum number of retries for failed requests
MAX_RETRIES=3
